{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Tabular Data Package",
  "description": "Tabular Data Package is a simple specification for data access and delivery of tabular data.",
  "type": "object",
  "required": [ "name", "resources" ],
  "properties": {
    "name": {
      "$ref": "definitions.json#/name",
      "propertyOrder": 10
    },
    "title": {
      "$ref": "definitions.json#/license",
      "propertyOrder": 20
    },
    "description": {
      "$ref": "definitions.json#/description",
      "format": "textarea"
    },
    "homepage": {
      "$ref": "definitions.json#/homepage",
      "propertyOrder": 40
    },
    "version": {
      "$ref": "definitions.json#/version",
      "propertyOrder": 50
    },
    "license": {
      "$ref": "definitions.json#/license",
      "propertyOrder": 60
    },
    "author": {
      "$ref": "definitions.json#/author",
      "propertyOrder": 70
    },
    "contributors": {
      "$ref": "definitions.json#/contributors",
      "propertyOrder": 80,
      "options": { "hidden": true }
    },
    "resources": {
      "title": "Resources",
      "description": "The data resources that this package describes.",
      "type": "array",
      "propertyOrder": 90,
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "definitions.json#/name",
            "propertyOrder": 10
          },
          "title": {
            "$ref": "definitions.json#/license",
            "propertyOrder": 20
          },
          "description": {
            "$ref": "definitions.json#/description",
            "propertyOrder": 30,
            "format": "textarea"
          },
          "schema": {
            "$ref": "definitions.json#/schema",
            "propertyOrder": 40
          },
          "url": {
            "$ref": "definitions.json#/url",
            "propertyOrder": 50
          },
          "path": {
            "$ref": "definitions.json#/path",
            "propertyOrder": 60
          },
          "data": {
            "$ref": "definitions.json#/data",
            "propertyOrder": 70
          },
          "format": {
            "$ref": "definitions.json#/format",
            "propertyOrder": 80
          },
          "mediatype": {
            "$ref": "definitions.json#/mediatype",
            "propertyOrder": 90
          },
          "encoding": {
            "$ref": "definitions.json#/encoding",
            "propertyOrder": 100
          },
          "bytes": {
            "$ref": "definitions.json#/bytes",
            "propertyOrder": 110
          },
          "hash": {
            "$ref": "definitions.json#/hash",
            "propertyOrder": 120
          },
          "dialect": {
            "$ref": "definitions.json#/dialect",
            "propertyOrder": 130,
            "options": { "hidden": true }
          },
          "sources": {
            "$ref": "definitions.json#/sources",
            "propertyOrder": 140,
            "options": { "hidden": true }
          },
          "licence": {
            "$ref": "definitions.json#/license",
            "description": "The license under which the resource is published.",
            "propertyOrder": 150
          }
        },
        "anyOf": [
          { "title": "url required", "required": ["url"] },
          { "title": "path required", "required": ["path"] },
          { "title": "data required", "required": ["data"] }
        ]
      }
    },
    "keywords": {
      "$ref": "definitions.json#/keywords",
      "propertyOrder": 100
    },
    "sources": {
      "$ref": "definitions.json#/sources",
      "propertyOrder": 110,
      "options": { "hidden": true }
    },
    "image": {
      "$ref": "definitions.json#/image",
      "propertyOrder": 120,
      "options": { "hidden": true }
    },
    "base": {
      "$ref": "definitions.json#/base",
      "propertyOrder": 130,
      "options": { "hidden": true }
    },
    "dataDependencies": {
      "$ref": "definitions.json#/dataDependencies",
      "propertyOrder": 140,
      "options": { "hidden": true }
    }
  }
}
