{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Fiscal Data Package",
  "description": "Fiscal Data Package is a simple specification for data access and delivery of fiscal data.",
  "type": "object",
  "required": [ "name", "title", "resources", "mapping" ],
  "properties": {
    "name": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/name",
      "propertyOrder": 10
    },
    "title": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/license",
      "propertyOrder": 20
    },
    "description": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/description",
      "format": "textarea"
    },
    "homepage": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/homepage",
      "propertyOrder": 40
    },
    "version": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/version",
      "propertyOrder": 50
    },
    "license": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/license",
      "propertyOrder": 60
    },
    "author": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/author",
      "propertyOrder": 70
    },
    "contributors": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/contributors",
      "propertyOrder": 80,
      "options": { "hidden": true }
    },
    "resources": {
      "title": "Resources",
      "description": "The data resources that this package describes.",
      "type": "array",
      "propertyOrder": 90,
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/name",
            "propertyOrder": 10
          },
          "title": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/license",
            "propertyOrder": 20
          },
          "description": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/description",
            "propertyOrder": 30,
            "format": "textarea"
          },
          "schema": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/schema",
            "propertyOrder": 40
          },
          "url": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/url",
            "propertyOrder": 50
          },
          "path": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/path",
            "propertyOrder": 60
          },
          "data": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/data",
            "propertyOrder": 70
          },
          "format": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/format",
            "propertyOrder": 80
          },
          "mediatype": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/mediatype",
            "propertyOrder": 90
          },
          "encoding": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/encoding",
            "propertyOrder": 100
          },
          "bytes": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/bytes",
            "propertyOrder": 110
          },
          "hash": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/hash",
            "propertyOrder": 120
          },
          "dialect": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/dialect",
            "propertyOrder": 130,
            "options": { "hidden": true }
          },
          "sources": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/sources",
            "propertyOrder": 140,
            "options": { "hidden": true }
          },
          "licence": {
            "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/license",
            "description": "The license under which the resource is published.",
            "propertyOrder": 150
          }
        },
        "anyOf": [
          { "title": "url required", "required": ["url"] },
          { "title": "path required", "required": ["path"] },
          { "title": "data required", "required": ["data"] }
        ]
      }
    },
    "keywords": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/keywords",
      "propertyOrder": 100
    },
    "sources": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/sources",
      "propertyOrder": 110,
      "options": { "hidden": true }
    },
    "image": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/image",
      "propertyOrder": 120,
      "options": { "hidden": true }
    },
    "base": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/base",
      "propertyOrder": 130,
      "options": { "hidden": true }
    },
    "dataDependencies": {
      "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/dataDependencies",
      "propertyOrder": 140,
      "options": { "hidden": true }
    },
    "countryCode": { "$ref": "https://raw.githubusercontent.com/dataprotocols/schemas/feature/schemas.datapackages.org/definitions.json#/countryCode" },
    "granularity": {
      "title": "Granularity of resources",
      "description": "A keyword that represents the type of spend data, eiter aggregated or transactional",
      "type": "string",
      "enum": ["aggregated", "transactional"]
    },
    "fiscalPeriod": {
      "title": "Fiscal period for the budget",
      "description": "The fiscal period of the dataset",
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "pattern": "^\\d{4}-(0?[1-9]|1[012])-(0?[1-9]|[12]\\d|3[01])"
        },
        "end": {
          "type": "string",
          "pattern": "^\\d{4}-(0?[1-9]|1[012])-(0?[1-9]|[12]\\d|3[01])"
        }
      },
      "required": ["start"]
    },
    "mapping": {
      "title": "Mapping",
      "description": "The mapping hash provides a way to link the 'physical' model - the data in CSV files - to a more general, conceptual, 'logical' model for fiscal information.",
      "type": "object",
      "properties": {
        "measures": {
          "title": "Measures",
          "description": "Measures are numerical and correspond to financial amounts in the source data.",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "currency": {
                "type": "string",
                "pattern": "^[A-Z]{3}$"
              },
              "factor": {
                "type": "number"
              },
              "resource": {
                "type": "string"
              },
              "direction": {
                "title": "Direction of the spending",
                "description": "A keyword that represents the direction of the spend, either expenditure or revenue.",
                "type": "string",
                "enum": ["expenditure", "revenue"]
              },
              "phase": {
                "title": "Budget phase",
                "description": "A keyword that represents the phase of the data, can be proposed for a budget proposal, approved for an approved budget, adjusted for modified budget or executed for the enacted budget",
                "type": "string",
                "enum": ["proposed", "approved", "adjusted", "executed"]
              }
            },
            "required": ["name", "source", "currency"]
          }
        },
        "dimensions": {
          "title": "Dimensions",
          "description": "Dimensions are groups of related fields. Dimensions cover all items other than the measure.",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "title": "Name",
                "description": "The dimension name in the logical model",
                "type": "string"
              },
              "fields": {
                "title": "Fields",
                "description": "An array of field objects that make up the dimension",
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "source": {
                      "type": "string"
                    },
                    "resource": {
                      "type": "string"
                    }
                  },
                  "required": ["name", "source"]
                }
              },
              "primaryKey": {
                "title": "Primary Key",
                "description": "Either an array of strings corresponding to the name attributes in a set of field objects in the fields array or a single string corresponding to one of these names. The value of primaryKey indicates the primary key or primary keys for the dimension.",
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "dimensionType": {
                "title": "Dimension Type",
                "description": "Describes what kind of a dimension it is.",
                "type": "string",
                "enum": ["datetime","entity","classification","activity","fact","location","other"]
              },
              "classificationType": {
                "title": "Classification Type",
                "description": "The type of the classification.",
                "enum": ["functional","administrative","economic"]
              }
            },
            "required": ["name"]
          }
        }
      },
      "required": ["measures","dimensions"]
    }
  }
}
